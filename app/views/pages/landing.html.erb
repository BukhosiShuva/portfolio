<body class="bg-[#EDEADF] min-h-screen flex items-center justify-center">
  <div id="landing-wrapper" class="transition-opacity duration-[3000ms] ease-in-out opacity-100 w-full">
    <div class="pt-10 px-4 md:px-20">
      <div class="max-w-7xl w-full mx-auto flex flex-col md:flex-row items-center justify-between gap-8">
        <!-- Left Side: Image -->
        <div class="w-full md:w-1/2">
          <%= image_tag "landingpagegif.gif", alt: "Landing page gif", class: "w-full max-w-md mx-auto rounded-lg shadow-lg" %>
        </div>

        <!-- Right Side: Text Content -->
        <div class="w-full md:w-1/2 text-center md:text-left">
          <!-- Name and title -->
          <h2 id="landing_name" class="text-[#9C7B50] text-3xl md:text-4xl font-normal pb-6 pt-2">
            Bukhosi Shuva: Software Developer
          </h2>

          <hr class="shadow-[0_0_8px_1px_#9C7B50] border-none w-full my-2">

          <!-- Tagline -->
          <h2 class="text-[#9C7B50] text-2xl md:text-4xl font-normal mt-4 pt-4 pb-5">
            Coding with Elegance. <br class="block md:hidden">
            <span class="italic">Where software becomes Art.</span>
          </h2>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const wrapper = document.getElementById("landing-wrapper");

      setTimeout(() => {
        wrapper.classList.remove("opacity-100");
        wrapper.classList.add("opacity-0");

        setTimeout(() => {
          window.location.href = "/home";
        }, 3000);
      }, 3000);
    });
  </script>
</body>
