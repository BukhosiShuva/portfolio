    <div class="pt-10">
        <div class="flex justify-center items-center pt-20 pb-20 px-4">
        <div class="w-full max-w-2xl bg-white p-10 rounded-xl shadow-[0_4px_20px_rgba(0,0,0,0.1)]">
            <div class="container mx-auto px-4 -mt-4">
            <h2 id="landing_name" class="text-[#352A1C] text-center text-4xl font-none pb-10 pt-1 whitespace-nowrap sm:pl-20 lg:pr-20">
                Let's Connect!
            </h2>
            <!-- Contact Form -->
            <%= form_with model: @contact_form, url: send_contact_form_pages_path, method: :post, local: true do |form| %>
                <div class="flex flex-col space-y-4">
                <div class="flex flex-col">
                    <%= form.label :name, 'Name', class: 'pb-2' %>
                    <%= form.text_field :name, class: 'border rounded-lg p-2' %>
                    <% if @contact_form.errors[:name].any? %>
                    <div class="text-red-500 text-sm">
                        <%= @contact_form.errors[:name].join(', ') %>
                    </div>
                    <% end %>
                </div>

                <div class="flex flex-col">
                    <%= form.label :email, 'Email', class: 'pb-2' %>
                    <%= form.email_field :email, class: 'border rounded-lg p-2' %>
                    <% if @contact_form.errors[:email].any? %>
                    <div class="text-red-500 text-sm">
                        <%= @contact_form.errors[:email].join(', ') %>
                    </div>
                    <% end %>
                </div>

                <div class="flex flex-col">
                    <%= form.label :message, 'Message', class: 'pb-2'%>
                    <%= form.text_area :message, class: 'border rounded-lg p-2' %>
                    <% if @contact_form.errors[:message].any? %>
                    <div class="text-red-500 text-sm">
                        <%= @contact_form.errors[:message].join(', ') %>
                    </div>
                    <% end %>
                </div>

                <%= form.submit 'Send Message', class: 'bg-[#94754C] text-white py-2 px-4 rounded-full hover:bg-[#352A1C]' %>
                </div>
            <% end %>
            </div>
        </div>
        </div>
